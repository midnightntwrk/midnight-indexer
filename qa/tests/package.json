{
  "name": "midnight-indexer-viteset",
  "packageManager": "yarn@3.6.4",
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx,json,ts,tsx,graphql,gql}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "audit": "yarn npm audit && echo 'No known vulnerabilities found.'",
    "test": "vitest run --project smoke --project e2e --project integration",
    "test:e2e": "vitest run --project e2e",
    "test:smoke": "vitest run --project smoke",
    "test:integration": "vitest run --project integration",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean:logs": "rm -rf logs/",
    "clean:reports": "rm -rf reports/",
    "clean:modules": "rm -rf node_modules/",
    "clean": "yarn clean:logs && yarn clean:reports && yarn clean:modules",
    "prepare": "cd ../.. && husky qa/tests/.husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "**/*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "graphql": "16.11.0"
  },
  "devDependencies": {
    "@graphql-inspector/core": "^6.2.1",
    "@types/node": "^22.18.8",
    "@types/pg": "^8.11.10",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bech32": "^2.0.0",
    "diff": "^8.0.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "graphql-ws": "^6.0.6",
    "husky": "^9.1.6",
    "jsonc-parser": "^3.3.1",
    "lint-staged": "^15.2.10",
    "pg": "^8.13.1",
    "pino": "^9.13.1",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "testcontainers": "^11.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "ws": "^8.18.3",
    "xmlbuilder2": "^3.1.1",
    "zod": "^3.25.76"
  }
}
